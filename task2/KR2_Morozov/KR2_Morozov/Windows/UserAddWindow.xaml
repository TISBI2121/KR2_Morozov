<Page x:Class="KR2_Morozov.Windows.UserAddWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Morozov.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAddWindow">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Text="ФИО"/>
            <TextBox x:Name="TBFIO"/>
            <TextBlock Text="Паспорт"/>
            <TextBox x:Name="TBPass"/>
            <TextBlock Text="Адрес"/>
            <TextBox x:Name="TBAddress"/>
            <TextBlock Text="Телефон"/>
            <TextBox x:Name="TBTelephone"/>
            <TextBlock Text="Стек технологий"/>
            <TextBox x:Name="TBStackDesc"/>
            <TextBlock Text="Обязанности"/>
            <TextBox x:Name="TBDutiDesc"/>
            <TextBlock Text="Ставка"/>
            <TextBox x:Name="TBRate"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BAdd" Content="добавить" Click="BAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
